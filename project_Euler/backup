max_value = 4000000
n1, n2 = 1, 2

solution = 0

while n1 < max_value:

    # Fibonacci seq.
    n1, n2 = n2, n1 + n2
    # if numbers are even
    if n1 % 2 == 0:
        solution += n1

print(solution)

solution = sum([i for i in range(1000) if i % 3 == 0 or i % 5 == 0])

print(solution)

def largest_prime_factor(n):
    i = 2
    while i * i <= n:
        if n % i:
            i += 1
        else:
            n //= i
    return n

print(largest_prime_factor(600851475143))